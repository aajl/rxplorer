<panel id="tabmenu_pane" type="modeless" x="0" y="0" width="155" height="179" visible="false" alpha="">
	<border width="1" color="#ACA899" />
	<custom id="tabmenu" x="2" y="2" width="151" height="176" yadapt="true" type="tiled" margin="1" position="relative" oninit="load_favorite_folders()">
		<bkimg src="menu.png" width="23" height="23" />
		<items height="adapt">
			<item name="新建标签" icon="" action="new_tab_view()" />
			<item name="复制标签" icon="" action="duplicate_tab()" />
			<item separator="1" />
			<item name="关闭标签" icon="" action="close_tab(poped_menu_tab)" />
			<item name="关闭其它标签" icon="" action="" />
			<item name="关闭左边的标签" icon="" action="" />
			<item name="关闭右边的标签" icon="" action="" />
			<item separator="1" />
			<item name="重命名" icon="" action="" />
		</items>
		<if condition="item.separator">
			<layer x="0" y="0" width="151" height="3" margin="0,3">
				<img x="0" y="0" width="23" height="3" adapt="true">
					<bkimg src="menu.png" width="23" height="3" />
				</img>
				<label width="122" height="3">
					<border width="1" color="#BEC3CB" center="1" />
				</label>
			</layer>
		<else />
			<layer id="item.id" x="0" y="0" width="151" height="23" adapt="false" text="item.name" align="vcenter" offset="30" action="item.action">
				<states normal="menu.png" hover="null" down="null" width="23" height="23" ix="3" iy="3" >
					<normal icon="item.icon" border="0" bkclr="#ffffff" />
					<hover border="1" color="#316AC5" bkclr="#C1D2EE" />
					<down border="1" color="#316AC5" bkclr="#C1D2EE" />
				</states>
			</layer>
		</if>
	</custom>
</panel>
