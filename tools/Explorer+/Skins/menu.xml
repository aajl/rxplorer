<menu id="main_menu" x="504" y="24" width="166" height="145" visible="false" yadapt="true" alpha="95" bkclr="#ffffff" margin="1,0,0,0,-1">
	<border width="1" color="#aca899" />
	<bkimg src="menu.png" width="23" height="23" />

	<items height="adapt">
		<item id="menu_file" text="文件">
			<item text="新建标签(&T)        Ctrl+T" icon="icons.folder" action="new_tab_view(get_curr_xplorer())" />
			<item text="新建文件夹(&N)   Ctrl+N" icon="icons.newfolder" action="new_folder()" />
			<item separator="1" />
			<item text="保存工作区(&S)   Ctrl+S" action="on_close()" />
			<item separator="1" />
			<item text="退出(&E)" action="explorer.close()" />
		</item>
		<item id="menu_edit" text="编辑">
			<item text="编辑(&E)                  F4" action="edit_file()" />
			<item text="刷新(&R)                  F5" action="" />
			<item text="复制(&C)                  F6" icon="icons.copyfile" action="copy_file()" />
			<item text="移动(&M)                  F7" icon="icons.movefile" action="move_file()" />
		</item>
		<!--item id="menu_bookmark" text="书签">
			<item text="添加到书签" icon="icons.fav" action="add_favorite_folder(addr.path)" />
			<item text="整理书签" />
			<item separator="1" />
		</item-->
		<!--item id="menu_plugin" text="插件">
			<item text="插件管理" />
			<item separator="1" />
		</item-->
		<item id="menu_view" text="视图">
			<item text="文件夹树" icon="folder.png" action="show_treeview(!treeview.visible())" />
			<item text="双面板" icon="icons.dual" action="show_dual_pane(!xplorer2.visible())" />
			<item text="详细状态栏" icon="" action="show_statusbar(!setting.statusbar.show)" />
		</item>
		<item id="menu_tools" text="工具">
			<item text="选项" />
			<item id="menu_language" text="语言" sub="triangle.png">
				<item text="中文 (简体)" />
				<item text="英语" />
			</item>
			<item separator="1" />
			<item text="快捷键管理" />
			<item text="鼠标手势管理" />
		</item>
		<item id="menu_help" text="帮助">
			<item text="帮助(&H)" />
			<item text="检查更新(&C)" />
			<item text="关于Explorer(&A)" action="about.show()" />
		</item>
	</items>
	
	<if condition="item.separator">
		<layer x="0" y="0" width="162" height="3" margin="0,3">
			<img width="23" height="3" adapt="true">
				<bkimg src="menu.png" width="23" height="3" />
			</img>
			<label width="135" height="3">
				<border width="1" color="#BEC3CB" center="1" />
			</label>
		</layer>
	<else />
		<layer x="0" y="0" width="162" height="23" adapt="false" action="item.action">
			<events mouse_in="item.mouse_in" mouse_out="item.mouse_out" />
			<states normal="menu.png" hover="null" down="null" width="23" height="23" ix="3" iy="3" >
				<normal icon="item.icon" border="0" bkclr="#ffffff" />
				<hover border="1" color="#316AC5" bkclr="#C1D2EE" />
				<down border="1" color="#316AC5" bkclr="#C1D2EE" />
			</states>

			<label bkimg="item.img" icon="item.icon" width="162" height="23">
				<attribs text="item.text" offset="30" align="singleline,vcenter" />
				<icon x="3" y="3" size="16" />
				<image x="item.x" y="item.y" width="19" height="19" dx="2" dy="2" />
			</label>
			<img src="item.sub" position="relative" x="-8" y="7" width="3" height="9" />
		</layer>
	</if>
</menu>