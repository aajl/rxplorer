<?xml version="1.0" encoding="utf-8"?>
<directui>
	<script type="javascript" src="skin.js" />

	<include>res.xml</include>
	
	<panel id="explorer" title="Explorer+" type="app" bkclr="#E5E5E5">
		<size x="0" y="0" width="880" height="660" resize="true" min-width="880" min-height="660" />
		<events maximize="max.check(true)" restore="max.check(0)" />
		<hittest>
			<rect x="475" y="0" width="295" height="23" float="width" />
		</hittest>

		<label x="475" y="0" width="295" height="23" float="width" clickable="true">
			<events dbclk="explorer.max()" />
		</label>

		<label id="title" text="Explorer+" x="0" y="0" width="105" height="23" color="#ffffff" font="fonts.bold_10">
			<attribs bkimg="imgs.main_hover" offset="9" align="center,vcenter" />
			<bkimg x="x" y="y" width="width" height="height" />
		</label>

		<!--界面的外边框-->
		<layer id="border">
			<!--顶部边框-->
			<img src="imgs.main_hover" x="105" y="0" width="768" height="23" adapt="true" float="width">
				<bkimg x="x" y="y" width="5" height="height" />
			</img>

			<img src="imgs.main_hover" x="873" y="0" width="7" height="23" adapt="true" float="right">
				<bkimg x="x" y="y" width="width" height="height" />
			</img>

			<!--底部边框-->
			<img src="imgs.main_hover" x="0" y="637" width="7" height="23" adapt="true" float="left,bottom">
				<bkimg x="x" y="y" width="width" height="height" />
			</img>

			<img src="imgs.main_hover" x="7" y="637" width="866" height="23" adapt="true" float="width,bottom">
				<bkimg x="x" y="y" width="5" height="height" />
			</img>

			<img src="imgs.main_hover" x="873" y="637" width="7" height="23" adapt="true" float="right,bottom">
				<bkimg x="x" y="y" width="width" height="height" />
			</img>

			<!--两侧边框-->
			<img src="imgs.main_hover" x="0" y="23" width="1" height="614" adapt="true" float="left,height">
				<bkimg x="x" y="y" width="width" height="height" />
			</img>

			<img src="imgs.main_hover" x="879" y="23" width="1" height="614" adapt="true" float="right,height">
				<bkimg x="x" y="y" width="width" height="height" />
			</img>
		</layer>
		
		<!--系统按钮-->
		<layer id="sys_btn" x="770" y="2" width="103" height="18" float="right" margin="0,0">
			<button id="min" action="window.min();" width="28">
				<states normal="imgs.main_hover" x="770" width="width" height="height">
					<normal y="2" />
					<hover y="23" />
				</states>
			</button>

			<button id="max" action="window.max()" width="27" checkable="true">
				<states normal="imgs.main_hover" x="798" width="width" height="height">
					<normal y="2" />
					<hover y="23" />
				</states>
				<states normal="imgs.main_hover" y="44" width="width" height="height">
					<normal x="771" />
					<hover x="798" />
				</states>
			</button>

			<button id="close" action="window.close()" width="48">
				<states normal="imgs.main_hover" x="825" width="width" height="height">
					<normal y="2" />
					<hover y="23" />
				</states>
			</button>
		</layer> <!--系统按钮-->
		
		<!--主菜单按钮-->
		<custom id="main_menu_btns" type="tiled" x="110" y="2" width="365" height="20" col="6" margin="0,3" bkclr="#E5E5E5">
			<items width="58" height="20">
				<item id="menu_file_btn" text="文件(F)" action="move_main_menu()" popup="main_menu.menu_file" />
				<item id="menu_bookmark_btn" text="书签(B)" action="move_main_menu()" popup="main_menu.menu_bookmark" />
				<item id="menu_plugin_btn" text="插件(P)" action="move_main_menu()" popup="main_menu.menu_plugin" />
				<item id="menu_tools_btn" text="工具(T)" action="move_main_menu()" popup="main_menu.menu_tools" />
				<item id="menu_windows_btn" text="窗口(W)" action="move_main_menu()" popup="main_menu.menu_windows" />
				<item id="menu_help_btn" text="帮助(H)" action="move_main_menu()" popup="main_menu.menu_help" />
			</items>
			<button x="0" y="0" width="58" height="20" align="center,vcenter,singleline">
				<attribs id="item.id" text="item.text" action="item.action" popup="item.popup" group="main_menu" />
				<states>
					<normal border="0" bkclr="#E5E5E5" />
					<hover border="1" color="#316AC5" bkclr="#C1D2EE" />
					<down border="1" color="#8A867A" bkclr="#E5E5E5" />
				</states>
			</button>
		</custom>

		<!--常用工具栏-->
		<custom id="toolbar" x="1" y="24" width="131" height="29" col="4" type="tiled" margin="0,1,0,7" bkclr="#E5E5E5" bkimg="dragable.png">
			<bkimg dx="2" dy="3" />
			<items width="29" height="29">
				<item img="computer.png" action="add_folder()" />
				<item img="folder.png" action="show_treeview()" />
				<item img="search.png" />
				<item img="thumb.png" />
			</items>
			<button width="29" height="29" action="item.action">
				<states normal="item.img" width="width" height="width">
					<normal dx="3" dy="3" border="0" bkclr="#E5E5E5" />
					<hover dx="2" dy="2" border="1" color="#316AC5" bkclr="#C1D2EE" />
					<down dx="3" dy="3" border="1" color="#316AC5" bkclr="#C1D2EE" />
				</states>
			</button>
		</custom>
		
		<!--收藏的工具栏-->
		<custom id="fav_toolbar" x="134" y="24" width="743" height="29" col="50" type="tiled" margin="0,1,0,7" float="width">
			<attribs bkclr="#E5E5E5" bkimg="dragable.png" oninit="load_favorite_tools()" />
			<bkimg dx="2" dy="3" />
			<events dbclk="print('db clk\n')" rbtn="print('rbutton\n')" />
			<items width="29" height="29">
			</items>
			<button id="item.id" width="29" height="29" path="item.icon" action="sys.shell_execute(this.attrib('path'))">
				<states width="24" height="24">
					<normal icon="item.icon" dx="3" dy="3" border="0" bkclr="#E5E5E5" />
					<hover dx="2" dy="2" border="1" color="#316AC5" bkclr="#C1D2EE" />
					<down dx="3" dy="3" border="1" color="#316AC5" bkclr="#C1D2EE" />
				</states>
			</button>
		</custom>

		<!--地址栏-->
		<layer id="addrbar" x="68" y="56" width="565" height="25" bkclr="#FFFFFF" float="width">
			<border width="1" color="#316AC5" />

			<!--Undo/Redo-->
			<custom x="1" y="54" width="67" height="29" col="4" type="tiled" margin="0,1,0,7" bkclr="#E5E5E5">
				<bkimg src="dragable.png" dx="2" dy="3" />
				<items width="29" height="29">
					<item img="undo.png" action="addr.path='D:\\Download\\TeamPlayer'" />
					<item img="redo.png" action="addr.path='D:\\Download'" />
				</items>
				<button width="29" height="29" action="item.action">
					<states normal="item.img" width="width" height="width">
						<normal dx="3" dy="3" border="0" bkclr="#E5E5E5" />
						<hover dx="2" dy="2" border="1" color="#316AC5" bkclr="#C1D2EE" />
						<down dx="3" dy="3" border="1" color="#316AC5" bkclr="#C1D2EE" />
					</states>
				</button>
			</custom>

			<!--图标按钮-->
			<button position="relative" x="3" y="2" width="21" height="21" action="addr.path='D:\\Skins'">
				<states normal="cmptr.png" width="width" height="width">
					<normal border="0" bkclr="#FFFFFF" />
					<hover border="1" color="#316AC5" bkclr="#C1D2EE" />
				</states>
			</button>

			<!--多功能箭头-->
			<button position="relative" x="26" y="2" width="9" height="21" adapt="false" action="addr.path='D:\\Download\\TeamPlayer'">
				<states normal="triangle.png" dx="3" dy="9">
					<normal border="0" bkclr="#FFFFFF" />
					<hover border="1" color="#316AC5" bkclr="#C1D2EE" />
				</states>
			</button>

			<!--地址栏按钮-->
			<addr id="addr" path="D:\\Download\\Music" position="relative" x="36" y="1" width="492" height="23" bkclr="#FFFFFF" float="width">
				<states width="0" height="0">
					<normal border="0" bkclr="#FFFFFF" />
					<hover border="1" color="#316AC5" bkclr="#C1D2EE" />
				</states>
				<states normal="triangle.png" dx="3" dy="9">
					<normal border="0" bkclr="#FFFFFF" />
					<hover border="1" color="#316AC5" bkclr="#C1D2EE" />
				</states>
				<states width="0" height="0">
					<normal border="0" bkclr="#C0C0C0" />
					<hover border="1" color="#316AC5" bkclr="#C0C0C0" />
				</states>
				<states normal="triangle.png" dx="3" dy="9">
					<normal border="0" bkclr="#C0C0C0" />
					<hover border="1" color="#316AC5" bkclr="#C0C0C0" />
				</states>
			</addr>
			
			<!--收藏夹按钮-->
			<button x="529" position="relative" y="2" width="12" height="21" adapt="false" popup="explorer.folder_fav" float="right">
				<states normal="fav.png" dx="1" dy="6">
					<normal border="0" bkclr="#FFFFFF" />
					<hover border="1" color="#316AC5" bkclr="#C1D2EE" />
				</states>
			</button>

			<!--下拉列表按钮-->
			<button x="542" position="relative" y="2" width="21" height="21" adapt="false" float="right">
				<states normal="dropdown.png" dx="7" dy="9">
					<normal border="0" bkclr="#FFFFFF" />
					<hover border="1" color="#316AC5" bkclr="#C1D2EE" />
				</states>
			</button>
		</layer>
		
		<!--搜索栏-->
		<layer x="637" y="56" width="240" height="25" bkclr="#ffffff" float="right">
			<border width="1" color="#316AC5" />
			
			<edit id="search" position="relative" x="1" y="1" width="216" height="23" bkclr="#ffffff" hint="搜索" />
			
			<button position="relative" x="217" y="1" width="23" height="23" adapt="false">
				<states normal="search_icon.png" dx="3" dy="3">
				</states>
			</button>
		</layer>
		
		<!--目录收藏夹-->
		<panel id="folder_fav" x="685" y="81" width="155" height="215" bkclr="#FDFDFD" visible="false">
			<border width="1" color="#808080" />
			<effects show="effect.roll(folder_fav.id, 50, true, 2|8)" hide="effect.roll(folder_fav.id, 50, false, 1|4)" />
			<label x="1" y="2" width="28" height="211" bkclr="#F2F2F2" position="relative" />
			<custom x="2" y="2" width="151" height="211" margin="1" position="relative">
				<items height="20">
					<item text="收藏当前文件夹" src="favorite.png" />
					<item text="C:\Windows" />
					<item text="C:\Windows" />
					<item text="C:\Windows" />
					<item text="C:\Windows" />
					<item text="C:\Windows" />
					<item text="C:\Windows" />
					<item text="C:\Windows" />
				</items>
				<layer x="0" y="0" width="151" height="20" action="item.action">
					<states link="states.menu_item" />
					<label bkimg="item.src" x="0" y="0" width="151" height="20">
						<attribs text="item.text" offset="32" align="singleline,vcenter" />
						<bkimg dx="6" dy="2" />
					</label>
					<img src="item.src" position="relative" x="110" y="8" width="7" height="7" />
				</layer>
			</custom>
		</panel>
		
		<!--文件夹树控件-->
		<layer id="treeview" x="3" y="85" width="240" height="500" float="height">
			<border width="1" color="#ACA899" />
			
			<label text="文件夹" position="relative" x="0" y="0" width="240" height="22" align="vcenter" offset="2">
				<border width="1" color="#ACA899" />
			</label>
			
			<button position="relative" x="225" y="5" width="12" height="12" adapt="false">
				<states normal="close.png" dx="2" dy="2">
				</states>
			</button>
			
			<panel id="" position="relative" x="1" y="22" width="238" height="477" bkclr="#ffffff" float="height">
			</panel>
		</layer>

		<!--文件视图-->
		<layer id="xplorer" x="247" y="85" width="630" height="500" float="width,height">
			<border width="1" color="#ACA899" />
			
			<label position="relative" x="0" y="0" width="630" height="22" float="width">
				<border width="1" color="#ACA899" />
			</label>
			
			<button position="relative" x="615" y="5" width="12" height="12" adapt="false" float="right">
				<states normal="close.png" dx="2" dy="2">
				</states>
			</button>
			
			<custom id=".tabs" type="tiled" position="relative" x="2" y="2" width="612" height="20" col="100" float="width">
				<items width="adapt" height="20">
					<!--<item id="tab1" text="" icon="" tab="item.tab" />-->
				</items>
				<button id="item.id" width="adapt,15" height="20" text="item.text" align="center,vcenter" offset="24">
					<tabs tab="item.tab" group="folders" />
					<states dx="6" dy="1">
						<normal icon="item.icon" link="javascript:tabbtn.id" />
					</states>
				</button>
			</custom>

			<custom id=".views" type="tiled" position="relative" x="1" y="22" width="628" height="477" bkclr="#ffffff" col="1" float="width,height">
				<items width="adapt" height="0">
					<!--<item id="view1" />-->
				</items>
				<panel id="item.id" x="0" y="0" width="628" height="477" bkclr="#ffffff" float="width,height">
				</panel>
				<script type="javascript">
				<![CDATA[
					//xplorer.views.insert("<item id='view1' />");
				]]>
				</script>
			</custom>
