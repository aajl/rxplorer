				</items>
				<label text="item.text" width="155" height="18" font="fonts.arial_9" color="#5A6779" align="vcenter" />
			</custom>
		</layer>

	</panel> <!-- end explorer -->
	
	<include>menu.xml</include>
	
	<include>about.xml</include>
