		<!--状态栏-->
		<layer id="statusbar" x="1" y="589" width="878" height="70" float="width,bottom">
			<border width="1" color="#ACA899" />
			
			<img src="statusbar.png" position="relative" x="0" y="0" width="878" height="70" float="width">
				<bkimg x="0" y="0" width="20" height="70">
					<y x="7" y="0" width="5" height="70" />
				</bkimg>
			</img>
			
			<img src="Explorer.png" position="relative" x="13" y="3" width="64" height="64" adapt="half">
				<bkimg dx="center" dy="center" />
			</img>
			
			<label id=".filename" text="给我一个温暖空间.avi" position="relative" x="90" y="5" width="150" height="18" font="fonts.arial_10" align="vcenter" />
			<label id=".filetype" text="配置设置" position="relative" x="92" y="23" width="100" height="18" font="fonts.arial_9" color="#5A6779" align="vcenter" />

