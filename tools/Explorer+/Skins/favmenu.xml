<panel id="favfolders_pane" type="modeless" x="0" y="0" width="155" height="215" visible="false" alpha="95">
	<border width="1" color="#ACA899" />
	<!--effects show="effect.roll(folder_fav.id, 50, true, 2|8)" hide="effect.roll(folder_fav.id, 50, false, 1|4)" />
	<label x="1" y="2" width="28" height="211" bkclr="#F2F2F2" position="relative" /-->
	<custom id="favfolders" x="2" y="2" width="151" height="211" yadapt="true" type="tiled" margin="1" position="relative" oninit="load_favorite_folders()">
		<bkimg src="menu.png" width="23" height="23" />
		<items height="adapt">
			<item name="收藏当前文件夹" path="" icon="icons.fav" action="favorite_folder(addr.path)" />
			<item separator="1" />
		</items>
		<if condition="item.separator">
			<layer x="0" y="0" width="151" height="3" margin="0,3">
				<img x="0" y="0" width="23" height="3" adapt="true">
					<bkimg src="menu.png" width="23" height="3" />
				</img>
				<label width="122" height="3">
					<border width="1" color="#BEC3CB" center="1" />
				</label>
			</layer>
		<else />
			<layer id="item.id" x="0" y="0" width="151" height="23" adapt="false" path="item.path" text="item.name" align="vcenter" offset="30" action="item.action">
				<states normal="menu.png" hover="null" down="null" width="23" height="23" ix="3" iy="3" >
					<normal icon="item.icon" border="0" bkclr="#ffffff" />
					<hover border="1" color="#316AC5" bkclr="#C1D2EE" />
					<down border="1" color="#316AC5" bkclr="#C1D2EE" />
				</states>
			</layer>
		</if>
	</custom>
</panel>
