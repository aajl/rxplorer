			<items width="29" height="29">
				<item img="computer.png" />
				<item img="folder.png" />
				<item img="search.png" />
				<item img="thumb.png" />
			</items>
			<button width="29" height="29">
				<states normal="item.img" width="width" height="width">
					<normal dx="3" dy="3" border="0" bkclr="#E5E5E5" />
					<hover dx="2" dy="2" border="1" color="#316AC5" bkclr="#C1D2EE" />
					<down dx="3" dy="3"/>
				</states>
			</button>
		</custom>
		
		<!--收藏的工具栏-->
		<custom x="134" y="24" width="254" height="29" col="7" type="tiled" margin="0,2,0,7" bkclr="#E5E5E5" bkimg="dragable.png">
			<image dx="2" dy="3" />
			<items width="29" height="29">
				<item icon="C:\windows\system32\notepad.exe" />
				<item icon="D:\tri_soft\Notepad++\notepad++.exe" />
				<item icon="D:\tri_soft\mplayer\mplayer.exe" />
				<item icon="D:\tri_soft\c32asm\C32Asm.exe" />
				<item icon="D:\tri_soft\FileCompare\BC2.exe" />
				<item icon="D:\tri_soft\Explorer\tools\SQLite Database Browser.exe" />
				<item icon="D:\tri_soft\Explorer\tools\dui\App.exe" />
			</items>
			<button width="29" height="29">
				<states width="24" height="24">
					<normal icon="item.icon" dx="3" dy="3" border="0" bkclr="#E5E5E5" />
					<hover dx="2" dy="2" border="1" color="#316AC5" bkclr="#C1D2EE" />
					<down dx="3" dy="3"/>
				</states>
			</button>
		</custom>

		<!--地址栏-->
		<layer id="addrbar" x="68" y="56" width="653" height="25" bkclr="#FFFFFF">
			<border width="1" color="#316AC5" />

			<custom x="1" y="54" width="67" height="29" col="4" type="tiled" margin="0,2,0,7" bkclr="#E5E5E5" bkimg="dragable.png">
				<image dx="2" dy="3" />
				<items width="29" height="29">
					<item img="undo.png" action="addr.path='c:\\skins\\default'" />
					<item img="redo.png" action="addr.path='c:\\skins\\default\\old'" />
				</items>
				<button width="29" height="29" action="item.action">
					<states normal="item.img" width="width" height="width">
						<normal dx="3" dy="3" border="0" bkclr="#E5E5E5" />
						<hover dx="2" dy="2" border="1" color="#316AC5" bkclr="#C1D2EE" />
						<down dx="3" dy="3"/>
					</states>
				</button>
			</custom>

			<button x="71" y="58" width="21" height="21" action="addr.path='D:\\Skins'">
