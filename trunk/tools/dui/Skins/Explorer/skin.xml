	<!--图片集-->
	<imgs id="imgs" main_hover="main_hover.png">
	</imgs>

	<!--图标集-->
	<icons id="icons" notepad="C:\windows\system32\notepad.exe">
	</icons>
	
	<!--字体集-->
	<fonts id="fonts">
		<font id="default" size="10" face="新宋体" />
