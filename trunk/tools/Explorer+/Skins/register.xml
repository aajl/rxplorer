<!--关于对话框-->
<panel id="register" type="modal" visible="false" alpha="95" bkclr="#E5E5E5">
	<size x="0" y="0" width="420" height="310" />
	<border width="1" color="#404040" />
	<hittest>
		<rect x="0" y="0" width="370" height="24" />
	</hittest>

	<label x="419" y="0" width="1" height="310">
		<border width="1" color="#404040" right="1" />
	</label>

	<label id="title" text="lang.register_title" x="9" y="0" width="120" height="20" color="#ffffff" font="fonts.bold_9">
		<attribs adapt="true" align="center,vcenter" />
		<bkimg src="imgs.main_hover" x="x" y="y" width="96" height="height">
			<!--x x="10" y="0" width="20" height="23" /-->
		</bkimg>		
	</label>

	<button id="close" x="365" y="1" width="48" height="18" action="window.close()">
		<states normal="imgs.main_hover" x="825" width="width" height="height">
			<normal y="2" />
			<hover y="23" />
		</states>
	</button>
	
	<img src="about.png" x="1" y="26" width="418" height="93" adapt="true" />
	
	<label id=".email" text="lang.email" x="14" y="140" width="70" height="20" font="fonts.song_10" />
	<edit id=".mail" x="84" y="136" width="200" height="20" offset="1" bkclr="#ffffff" hint="lang.email_hint">
		<border width="1" color="#316AC5" />
	</edit>

	<label id=".license" text="lang.license" x="14" y="170" width="70" height="20" font="fonts.song_10" />
	<edit id=".code" x="84" y="166" width="200" height="20" offset="1" bkclr="#ffffff" hint="lang.license_hint">
		<border width="1" color="#316AC5" />
	</edit>

	<line x="1" y="263" width="418" height="1" color="#ACA899" />
	<line x="1" y="264" width="418" height="1" color="#FFFFFF" />

	<button text="lang.register" action="on_register()" x="350" y="275" width="59" height="24" align="center,vcenter">
		<states normal="button.png" width="59" height="24">
			<normal x="0" />
			<hover x="59" />
			<down x="118" />
		</states>
	</button>

	<script type="javascript">
		about.version.text = ver.version;
	</script>
</panel>
